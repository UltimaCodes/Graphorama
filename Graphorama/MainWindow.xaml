<Window x:Class="Graphorama.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:Graphorama"
        Title="Graphorama" Height="720" Width="1280" Background="LightGray">
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Graph Area -->
        <oxy:PlotView x:Name="PlotView" Grid.Row="0" Background="White" />

        <!-- Input Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <!-- TextBox with Placeholder -->
            <Grid>
                <TextBox x:Name="EquationInput" Width="300" Height="30" FontSize="14" />
                <TextBlock Text="Enter equation, e.g., x^2 + 3"
                           Foreground="Gray" Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Visibility="{Binding Text, ElementName=EquationInput, Converter={StaticResource StringToVisibilityConverter}}" />
            </Grid>
            <Button Content="Plot" Width="80" Height="30" Margin="5,0" Click="OnPlotButtonClick" />
            <Button Content="Clear" Width="80" Height="30" Margin="5,0" Click="OnClearButtonClick" />
        </StackPanel>
    </Grid>
</Window>
