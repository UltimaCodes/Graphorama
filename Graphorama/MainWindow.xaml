<Window x:Class="Graphorama.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Graphorama" Height="450" Width="800">
    <Grid>
        <!-- Input for the mathematical equation -->
        <TextBox x:Name="EquationInput" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="300" Height="30"/>

        <!-- Plot button -->
        <Button Content="Plot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="320,10,0,0" Click="OnPlotButtonClick"/>

        <!-- Clear button -->
        <Button Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="400,10,0,0" Click="OnClearButtonClick"/>

        <!-- Zoom reset button -->
        <Button Content="Reset Zoom" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="480,10,0,0" Click="OnZoomResetClick"/>

        <!-- Plot area -->
        <oxy:PlotView x:Name="PlotView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,50"/>

        <!-- List of functions entered by the user -->
        <ListBox x:Name="FunctionListBox" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="300" Margin="10,200,0,0"/>
    </Grid>
</Window>
