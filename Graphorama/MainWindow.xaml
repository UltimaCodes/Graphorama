<Window x:Class="Graphorama.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Graphorama" Height="600" Width="800">
    <Grid>
        <!-- Graph Area -->
        <oxy:PlotView x:Name="PlotView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,300,10"/>

        <!-- Right Panel -->
        <StackPanel Orientation="Vertical" Width="280" HorizontalAlignment="Right" Margin="0,10,10,10">
            <!-- Input Section -->
            <TextBox x:Name="EquationInput" Height="30" Margin="0,0,0,10" />

            <Button Content="Add Expression" Height="30" Margin="0,0,0,10" Click="OnAddExpressionClick" />

            <!-- Function List -->
            <ListBox x:Name="FunctionList" Height="350" VerticalAlignment="Top" KeyDown="OnFunctionListKeyDown" />

            <!-- Buttons -->
            <Button Content="Clear Graph" Height="30" Margin="0,10,0,0" Click="OnClearGraphClick" />
            <Button Content="Reset Zoom" Height="30" Margin="0,10,0,0" Click="OnResetZoomClick" />
        </StackPanel>
    </Grid>
</Window>
